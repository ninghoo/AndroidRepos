<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/notice"
              android:background="@drawable/four_corner_lhtgray"
              android:layout_width="match_parent"
              android:layout_height="80dp" >

    <!--<ImageView-->
        <!--android:id="@+id/bt_notic_pause"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <ImageView
        android:id="@+id/bt_notic_last"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/bt_notic_play"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_brightness_1_black_18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"/>

    <Button
        android:id="@+id/bt_notic_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/ic_keyboard_arrow_right_black_18dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>